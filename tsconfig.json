{
    "compilerOptions": {
        "target": "ES2019",
        "module": "ES2015",
        "declaration": true,
        "declarationMap": false,
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "isolatedModules": false,
        "lib": [
            "ES2019"
        ],
        "resolveJsonModule": false
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}